#Random 3
import random
random_int = random.randint(1,2)
if random_int == 1:
    print("Head")
else: print("Tails")

#Random 4 - this is bc in the square bracket a random integer is returned
who = friends[random.randint(0,4)]
print(who)
#same thing:
friends = ["Alice", "Bob", "Ella", "Leon", "Tom"]
who = random.choices(friends)
print(who)

#nested list eg
#first [] index chooses which list ie list 0 (fruits) or list 1 (vegetables)
#next [] determines where in the list
fruits = ["Strawberries", "Nectarines", "Apples", "Grapes", "Peaches", "Cherries", "Pears"]
vegetables = ["Spinach", "Kale", "Tomatoes", "Celery", "Potatoes"]

dirty_dozen = [fruits, vegetables]

print(dirty_dozen[0][5])
